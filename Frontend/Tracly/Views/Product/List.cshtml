@using Tracly.Dtos
@model List<ProductDto>
<br>
<h1>Products</h1>
<div class="input-group">
<input type="text" class="form-control" autocomplete="off" placeholder="Search for a product..." id="productNameListInput">
<div class="input-group-append">
    <button href="" class="btn btn-primary mb-4" data-toggle="modal" data-target="#productModal"
        onclick="showProductModal('productNameListInput')">Add</button>
</div>
    <partial name="_ProductsModal"/>
</div>
<hr class="mb-4">
<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th style="width: 40%">
                Product
            </th>
            <th style="width: 40%">
                Nutrients
            </th>
            <th style="width: 20%">
                Actions
            </th>
        </tr>
    </thead>
    <tbody id="productsListTable">
        <partial name="_ProductsList" model=@Model />
    </tbody>
</table>