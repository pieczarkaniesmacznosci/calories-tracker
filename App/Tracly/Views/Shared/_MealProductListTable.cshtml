@model List<MealProductDto>
     
@if(Model.Any())
{
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @item.Product?.Name
        </td>
        <td>
            <form>
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control input-sm numeric" required 
                        aria-describedby="basic-addon2" value="@item.Weight"autocomplete="off" data-meal-product-id="@item.Product.Id">
                        <div class="input-group-append">
                            <span class="input-group-text">g</span>
                        </div>
                    </div>
                </div>
            </form>
        </td>
        <td>
            <button type="button" class="btn btn-danger" title="Delete" onclick="deleteProductFromMeal(@item.Product.Id)">
                <i class="fas fa-minus text-white"></i>
            </button>
        </td>
    </tr>
    }
}
else
{
    <tr>
        <td align="center" colspan="3">Current composition has no products!</td>
    </tr>    
}