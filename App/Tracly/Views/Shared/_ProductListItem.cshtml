@model List<ProductDto>
    
@if(Model.Any())
{
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                K: @item.Kcal / P: @item.Protein / C: @item.Carbohydrates / F: @item.Fat
            </td>
            <td>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary" title="Edit" onclick="editProductModal(@item.Id)">
                        <i class="fas fa-edit text-white"></i>
                    </button>
                    <button type="button" class="btn btn-danger" title="Delete" onclick="deleteProduct(@item.Id)">
                        <i class="fas fa-trash text-white"></i>
                    </button>
                </div>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td align="center" colspan="3">Search for products</td>
    </tr>    
}