@model ProductListViewModel

<h1>@Model.Title</h1>

<div class="input-group mb-3">
  <input type="text" class="form-control" placeholder="Product name" aria-label="Recipient's username" aria-describedby="basic-addon2">
  <div class="input-group-append">
    <button class="btn btn-outline-secondary"  data-toggle="modal" data-target="#productModal" type="button">Search</button>
  </div>
</div>
<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Nutrients
        </th>
        <th>
            Action
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td >
                K: @item.Kcal / P: @item.Protein / C: @item.Carbohydrates / F: @item.Fat
            </td>
            <td>
                <partial name="_EditDeleteButtonPartial" model="@item.Id" />
            </td>
        </tr> 
        }
    </tbody>
</table>