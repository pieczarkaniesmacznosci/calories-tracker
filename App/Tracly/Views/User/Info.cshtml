@model UserViewModel

<br>
<h1>User panel</h1>
<br>

<!--Accordion wrapper-->
<div class="accordion md-accordion" id="accordionEx1" role="tablist" aria-multiselectable="true">

    <!-- Accordion card -->
    <div class="card" id="userNutritionAccordion">

        <!-- Card header -->
        <div class="card-header" role="tab" id="headingTwo1">
            <a class="collapsed" data-toggle="collapse" data-parent="#accordionEx1" href="#collapseTwo1">
                <h5 class="mb-0">
                    Nutrition <i class="fas fa-angle-down rotate-icon"></i>
                </h5>
            </a>
        </div>

        <!-- Card body -->
        <div id="collapseTwo1" class="collapse" role="tabpanel" data-parent="#accordionEx1">
            <div class="card-body">
                <form>
                    <!-- KCAL INTAKE-->
                    <div>
                        <span>Daily <b>Kcal</b> intake</span>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label class="col-sm-2 col-form-label" for="currentKcalIntake">Current</label>
                        <div class="input-group col-sm-3">
                            <input id="currentKcalIntake" autocomplete="off" type="text" class="form-control" value="@Model.Nutrition.Kcal"
                            aria-label="daily Kcal intake" disabled>
                        </div>
                        <label class="col-sm-2 col-form-label" for="kcalIntake">New</label>
                        <div class="input-group col-sm-3">
                            <input id="kcalIntake" autocomplete="off" type="text" class="form-control numeric" placeholder="Kcal">
                        </div>
                    </div>
                    <!-- PROTEIN INTAKE-->
                    <div>
                        <span>Daily <b>Protein</b> intake</span>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label class="col-sm-2 col-form-label" for="currentProteinIntake">Current</label>
                        <div class="input-group col-sm-3">
                            <input id="currentProteinIntake" autocomplete="off" type="text" class="form-control" value="@Model.Nutrition.Protein"
                            aria-label="daily Protein intake" disabled>
                        </div>
                        <label class="col-sm-2 col-form-label" for="proteinIntake">New</label>
                        <div class="input-group col-sm-3">
                            <input id="proteinIntake" autocomplete="off" type="text" class="form-control numeric" placeholder="Protein">
                        </div>
                    </div>
                    <!-- CARBOHYDRATES INTAKE-->
                    <div>
                        <span>Daily <b>Carbohydrates</b> intake</span>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label class="col-sm-2 col-form-label" for="currentCarbohydratesIntake">Current</label>
                        <div class="input-group col-sm-3">
                            <input id="currentCarbohydratesIntake" autocomplete="off" type="text" class="form-control" value="@Model.Nutrition.Carbohydrates"
                            aria-label="daily Carbohydrates intake" disabled>
                        </div>
                        <label class="col-sm-2 col-form-label" for="carbohydratesIntake">New</label>
                        <div class="input-group col-sm-3">
                            <input id="carbohydratesIntake" autocomplete="off" type="text" class="form-control numeric"
                            placeholder="Carbohydrates">
                        </div>
                    </div>
                    <!-- FAT INTAKE-->
                    <div>
                        <span>Daily <b>Fat</b> intake</span>
                    </div>
                    <div class="form-group row justify-content-center">
                        <label class="col-sm-2 col-form-label" for="currentFatIntake">Current</label>
                        <div class="input-group col-sm-3">
                            <input id="currentFatIntake" autocomplete="off" type="text" class="form-control" value="@Model.Nutrition.Fat"
                            aria-label="daily Fat intake" disabled>
                        </div>
                        <label class="col-sm-2 col-form-label" for="fatIntake">New</label>
                        <div class="input-group col-sm-3">
                            <input id="fatIntake" autocomplete="off" type="text" class="form-control numeric" placeholder="Fat">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Accordion card -->
    <div class="card" id="userWeightAccordion" >

        <!-- Card header -->
        <div class="card-header" role="tab" id="headingTwo2">
            <a class="collapsed" data-toggle="collapse" data-parent="#accordionEx1" href="#collapseTwo21">
                <h5 class="mb-0">
                    Weight <i class="fas fa-angle-down rotate-icon"></i>
                </h5>
            </a>
        </div>

        <!-- Card body -->
        <div id="collapseTwo21" class="collapse" role="tabpanel" data-parent="#accordionEx1">
            <div class="card-body">
                <!-- FAT INTAKE-->
                <div>
                    <span>Current <b>Weight</b></span>
                </div>
                <div class="form-group row justify-content-center">
                    <label class="col-sm-2 col-form-label" for="currentWeight">Current</label>
                    <div class="input-group col-sm-3">
                        <input id="currentWeight" autocomplete="off" type="text" class="form-control" value="75"
                        aria-label="current weight" disabled>
                    </div>
                    <label class="col-sm-2 col-form-label" for="weight">New</label>
                    <div class="input-group col-sm-3">
                        <input id="weight" autocomplete="off" type="text" class="form-control numeric" placeholder="Weight">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>