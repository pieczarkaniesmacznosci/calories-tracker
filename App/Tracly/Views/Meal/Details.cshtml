@model MealViewModel

<br>
<br>
<form>
    <h1>@Model.Title</h1>

    <!----------- PRODUCT FINDER ----------->
    <h2>Find products</h2>

    <div class="form-group">
        <div class="input-group">
            <input id="productForMealListInput" type="text" class="form-control" placeholder="Enter product's name.." id="productNameListInput">
            <div class="input-group-append">
                <button type="button" class="btn btn-primary" data-toggle="modal"
                data-target="#productModal">Add</button>
            </div>
        </div>
    </div>
    <hr class="mb-4">
    <div>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width: 40%">
                        Product
                    </th>
                    <th style="width: 40%">
                        Nutrients
                    </th>
                    <th style="width: 20%">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody id="productsListForMealTable">
                <partial name="_ProductListForMealTable" model="@Model.Products"/> 
            </tbody>
        </table>
    </div>

    <!----------- CURRENT COMPOSITION ----------->
    <h2>Current composition</h2>
    <hr class="mb-4">
    <div>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width: 40%">
                        Product
                    </th>
                    <th style="width: 40%">
                        Weight
                    </th>
                    <th style="width: 20%">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody id="mealProductListTable">
                <partial name="_MealProductListTable" model=@Model.Meal.MealProducts /> 
            </tbody>
        </table>
        <div class="form-group d-flex justify-content-between">
            <div class="input-group w-50">
                <input id="mealName" type="text" class="form-control " placeholder="Name">
            </div>
            <div class="input-group w-25">
                <input id="portionQty" type="text" class="form-control" placeholder="1">
                <div class="input-group-append">
                    <span class="input-group-text">pcs</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="float-right">
                <button type="submit" class="btn btn-success">Consume</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</form>

<!----------- PRODUCT ADD MODAL ----------->
<div id="productModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="container">
            <div class="modal-content">
                <div class="modal-header">
                    <h1>Add Product</h1>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label>Product name</label>
                            <input class="form-control" placeholder="Product name">
                        </div>
                        <div class="form-group">
                            <label>Kcal</label>
                            <input class="form-control" placeholder="Kcal">
                        </div>
                        <div class="form-group">
                            <label>Protein</label>
                            <input class="form-control" placeholder="Protein [g]">
                        </div>
                        <div class="form-group">
                            <label>Carbohydrates</label>
                            <input class="form-control" placeholder="Carbohydrates [g]">
                        </div>
                        <div class="form-group">
                            <label>Fat</label>
                            <input class="form-control" placeholder="Fat [g]">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dismiss" data-toggle="modal"
                    data-target="#productModal">Dismiss</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>