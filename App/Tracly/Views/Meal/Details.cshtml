@model MealViewModel

<br>
<br>
<form>
    <h1>@Model.Title</h1>

    <!----------- PRODUCT FINDER ----------->
    <h2>Find products</h2>

    <div class="form-group">
        <div class="input-group">
            <input id="productForMealListInput" type="text" class="form-control" placeholder="Enter product's name" id="productNameListInput">
            <div class="input-group-append">
                <button type="button" class="btn btn-primary" data-toggle="modal"
                data-target="#productModal" onclick="addProductMealModal()">Add</button>
            </div>
        </div>
    </div>
    <hr class="mb-4">
    <div>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width: 40%">
                        Product
                    </th>
                    <th style="width: 40%">
                        Nutrients
                    </th>
                    <th style="width: 20%">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody id="productsListForMealTable">
                <partial name="_ProductListForMealTable" model="@Model.Products"/> 
            </tbody>
        </table>
    </div>

    <!----------- CURRENT COMPOSITION ----------->
    <h2>Current composition</h2>
    <hr class="mb-4">
    <div>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width: 40%">
                        Product
                    </th>
                    <th style="width: 40%">
                        Weight
                    </th>
                    <th style="width: 20%">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody id="mealProductListTable">
                <partial name="_MealProductListTable" model=@Model.Meal.MealProducts /> 
            </tbody>
        </table>
        <div class="form-group d-flex justify-content-between">
            <div class="input-group w-50">
                <input id="mealName" type="text" class="form-control " placeholder="Name">
            </div>
            <div class="input-group w-25">
                <input id="portionQty" type="text" class="form-control disabled" placeholder="1">
                <div class="input-group-append">
                    <span class="input-group-text">pcs</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="float-right">
                <button type="submit" class="btn btn-success" onclick="eatNow()">Eat now</button>
                <button type="submit" class="btn btn-primary" onclick="saveForLater()">Save for later</button>
            </div>
        </div>
    </div>
</form>

<!----------- PRODUCT ADD MODAL ----------->

<div id="productModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" data-backdrop="static" data-keyboard="false">
        <div class="container">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title" id="productModalTitle"></h1>
                </div>
                <div class="modal-body">
                    <form id="productForm" name="productForm">
                        <div class="form-group">
                            <label>Product name</label>
                            <input class="form-control" id="name" name="name" placeholder="Product name"
                                autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label>Kcal</label>
                            <input class="form-control numeric" id="kcal" name="kcal" placeholder="Kcal" autocomplete="off" type="text">
                        </div>
                        <div class="form-group">
                            <label>Protein</label>
                            <input class="form-control numeric" id="protein" name="protein" placeholder="Protein [g]"
                                autocomplete="off" type="text">
                        </div>
                        <div class="form-group">
                            <label>Carbohydrates</label>
                            <input class="form-control numeric" id="carbohydrates" name="carbohydrates"
                                placeholder="Carbohydrates [g]" autocomplete="off" type="text">
                        </div>
                        <div class="form-group">
                            <label>Fat</label>
                            <input class="form-control numeric" id="fat" name="fat" placeholder="Fat [g]" autocomplete="off" type="text">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Dismiss</button>
                    <button type="submit" class="btn btn-primary" id="btnSubmit" onclick="saveProduct()">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>