@model List<Meal>

<br>
<nav>
    <div class="nav nav-tabs" role="tablist">
        <a class="nav-item nav-link active" id="nav-consumed-tab" data-toggle="tab" href="#consumed" role="tab">
            <span>Consumed</span>
        </a>
        <a class="nav-item nav-link" id="nav-saved-tab" data-toggle="tab" href="#saved" role="tab">
            <span>Saved</span>
        </a>
    </div>
</nav>

<div class="tab-content">
    <!----------- CONSUMED MEALS ----------->
    <div id="consumed" class="tab-pane container fade show active" role="tabpanel">
        <br>
        <div class="card row">
            <a class="btn btn-primary" href="/meal/details">Consume meal</a>
        </div>
        <hr class="mb-4">
        <div class="row">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th style="width: 40%">
                            Eaten
                        </th>
                        <th style="width: 40%">
                            Nutrients
                        </th>
                        <th style="width: 20%">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    
    <tbody id="divProductsPartial">
        <partial name="_MealsListItem" model=@Model />
    </tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle">
                            <td>
                                @item.DateEaten
                            </td>
                            <td>
                                Kcal: @item.MealProducts.Sum(x=>x.Product.Kcal) /
                                P: @item.MealProducts.Sum(x=>x.Product.Protein) /
                                C: @item.MealProducts.Sum(x=>x.Product.Carbohydrates) /
                                F: @item.MealProducts.Sum(x=>x.Product.Fat)
                            </td>
                            <td>
                                <partial name="_EditDeleteButtonPartial" model="@item.Id" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!----------- SAVED MEALS ----------->
    <div id="saved" class="tab-pane container fade" role="tabpanel">
        <br>
        <div class="row input-group">
            <input type="text" class="form-control" placeholder="Enter meal name">
            <div class="input-group-append">
                <a class="btn btn-primary" href="/meal/details">
                    Add Meals
                </a>
            </div>
        </div>
        <hr class="mb-4">
        <div class="row">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>
                            Meal
                        </th>
                        <th>
                            Nutrients
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                Spaghetti Carbonara
                            </td>
                            <td>
                                Kcal: 540 / P: 28 / C: 80/ F: 15
                            </td>
                            <td>
                                <partial name="_ConsumeEditDeleteButtonPartial" model="@item.Id" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>