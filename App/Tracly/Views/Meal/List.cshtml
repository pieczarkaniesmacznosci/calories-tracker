@model MealListViewModel
<nav>
    <div class="nav nav-tabs" role="tablist">
        <a class="nav-item nav-link active" id="nav-consumed-tab" data-toggle="tab" href="#consumed" role="tab">
            Consumed
        </a>
        <a class="nav-item nav-link" id="nav-saved-tab" data-toggle="tab" href="#saved" role="tab">
            Saved
        </a>
    </div>
</nav>

<div class="tab-content">
    <!----------- CONSUMED MEALS ----------->
    <div id="consumed" class="tab-pane fade show active" role="tabpanel">
        <div class="card" style="width: 18rem;">
            <a class="btn btn-primary" href="/meal/details">Consume meal</a>
        </div>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width: 40%">
                        Eaten
                    </th>
                    <th style="width: 40%">
                        Nutrients
                    </th>
                    <th style="width: 20%">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Meals)
                {
                    <tr class="align-middle">
                        <td>
                            @item.DateEaten
                        </td>
                        <td>
                            Kcal: @item.MealProducts.Sum(x=>x.Product.Kcal) /
                            P: @item.MealProducts.Sum(x=>x.Product.Protein) /
                            C: @item.MealProducts.Sum(x=>x.Product.Carbohydrates) /
                            F: @item.MealProducts.Sum(x=>x.Product.Fat)
                        </td>
                        <td>
                            <partial name="_EditDeleteButtonPartial" model="@item.Id" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!----------- SAVED MEALS ----------->
    <div id="saved" class="tab-pane fade" role="tabpanel">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Enter meal name">
            <div class="input-group-append">
                <a class="btn btn-primary" href="/meal/details">
                    Add Meals
                </a>
            </div>
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>
                            Meal
                        </th>
                        <th>
                            Nutrients
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Meals)
                    {
                        <tr>
                            <td>
                                Spaghetti Carbonara
                            </td>
                            <td>
                                Kcal: 540 / P: 28 / C: 80/ F: 15
                            </td>
                            <td>
                                <partial name="_ConsumeEditDeleteButtonPartial" model="@item.Id" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>