@model MealListViewModel
<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#consumed">Consumed</a></li>
  <li><a data-toggle="tab" href="#saved">Saved</a></li>
</ul>

<div class="tab-content">
  <div id="consumed" class="tab-pane fade in active">
    <h3>Consumed Meals</h3>
    <div class="input-group mb-3">
  <input type="text" class="form-control" placeholder="Product name" aria-label="Recipient's username" aria-describedby="basic-addon2">
  <div class="input-group-append">
      <a href="" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="#productModal">Search</a>
    @* <button class="btn btn-outline-secondary"  data-toggle="modal" data-target="#productModalBtn" type="button">Search</button> *@
  </div>
</div>
<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
    <tr>
        <th>
            Eaten
        </th>
        <th>
            Nutrients
        </th>
        <th>
            Action
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Meals)
        {
        <tr>
            <td>
                @item.DateEaten
            </td>
            <td >
                Weight: @item.MealProducts.Select(x=>x.Weight).Sum()
            </td>
            <td>
                <partial name="_EditDeleteButtonPartial" model="@item.Id" />
            </td>
        </tr> 
        }
    </tbody>
</table>
  </div>
  <div id="saved" class="tab-pane fade">
    <h3>SAVED</h3>
    <p>Some content in saved</p>
  </div>
</div>