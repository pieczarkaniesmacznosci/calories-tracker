@model MealListViewModel

<br>
<nav>
    <div class="nav nav-tabs" role="tablist">
        <a class="nav-item nav-link active" id="nav-consumed-tab" data-toggle="tab" href="#consumed" role="tab" onclick="loadMealsList(false)">
            <span>Consumed</span>
        </a>
        <a class="nav-item nav-link" id="nav-saved-tab" data-toggle="tab" href="#saved" role="tab" onclick="loadMealsList(true)">
            <span>Saved</span>
        </a>
    </div>
</nav>

<div class="tab-content">
    <!----------- CONSUMED MEALS ----------->
    <div id="consumed" class="tab-pane container fade show active" role="tabpanel">
        <br>
        <div class="card row">
            <a class="btn btn-primary" OnClientClick="mealDetails();return false;"  href="/meal/details">Let's eat!</a>
        </div>
        <hr class="mb-4">
        <div class="row">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th style="width: 40%">
                            Eaten
                        </th>
                        <th style="width: 40%">
                            Nutrients
                        </th>
                        <th style="width: 20%">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody id="divMealsConsumedPartial">
                    <partial name="_ConsumedMealsListTable" model=@Model.MealLogs />
                </tbody>
            </table>
        </div>
    </div>

    <!----------- SAVED MEALS ----------->
    <div id="saved" class="tab-pane container fade" role="tabpanel">
        <br>
        <div class="row input-group">
            <input type="text" class="form-control" placeholder="Enter meal name" id="mealListInput">
            <div class="input-group-append">
                <a class="btn btn-primary" href="/meal/details">
                    Add Meals
                </a>
            </div>
        </div>
        <hr class="mb-4">
        <div class="row">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>
                            Meal
                        </th>
                        <th>
                            Nutrients
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody id="divMealsSavedPartial">
                    <partial name="_MealsListItem" model=@Model.SavedMeals />
                </tbody>
            </table>
        </div>
    </div>
</div>